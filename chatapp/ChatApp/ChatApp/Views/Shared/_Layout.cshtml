@using System.Security.Claims
<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/twitter-bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/app.css" />
    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Home" asp-action="Index"><span class="sr-only">(current)</span>Chat room!</a>
                    </li>
                }
            </ul>
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="Account" asp-action="Logout" type="button" class="btn btn-outline-danger">Logout</a>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" type="button" class="btn btn-outline-success">Login</a>
            }
        </div>
    </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>
</body>