@model ChatRoom
@{
    ViewData["Title"] = "Home";
}

<style type="text/css">

</style>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="login-form">
                <form asp-controller="Home" asp-action="LoginToRoom" method="post">
                    <h2 class="text-center">Join a room!</h2>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="RoomName" type="text" class="form-control" placeholder="Room name...">
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password...">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">submit</button>
                    </div>
                    <div class="form-group">
                        <a onclick="@("window.location.href='" + @Url.Action("CreateRoom", "Home") + "'");" class="btn btn-primary btn-block">Create a room</a>
                    </div>
                    <div class="clearfix">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
